<h1 class="center mb-3"> Sign up for Alpha-Blog </h1>

<%= render "/shared/errors", obj: @user%>
<div class="container-fluid">

  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class='form-group row'>

      <div class="col-sm-2 col-form-label">
        <%= f.label :username %>
      </div>

      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-sm-2 col-form-label">
        <%= f.label :email %>
      </div>

      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-group row">

      <div class="col-sm-2 col-form-label">
        <%= f.label :password %>
      </div>

      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4 offset-sm-2">
        <%= f.submit "Sign up", class: 'btn btn-dark-red-bordered' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4 offset-sm-4">
        [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
      </div>
    </div>

    <% end %>
</div>

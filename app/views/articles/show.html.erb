<h2 class="center mt-1">Title: <%= @article.title %></h2>
<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="card article">
      <div class="card-header article-header center">
        <% if @article.user %>
          <% user=@article.user %>
          <ul class="listing">
            <li> <%= link_to gravatar_for(user, size:80), user_path(user) %> </li>
            <li> <%= link_to user.username, user_path(user) %> </li>
            <li> <%= link_to user.email, user_path(user)  %> </li>
            <li> <%= pluralize(user.articles.count, "article") %> </li>
          </ul>
        <% end %>
      </div>

      <div class="card-body article-body">
        <h4 class= > Description:</h4>
        <%= simple_format @article.description%>
        <hr>
        <div class="mb-1">
          <% if current_user == @article.user %>
            <%= link_to 'edit this article', edit_article_path(@article), class: "btn btn-primary btn-xs" %>
            <%= link_to 'delete this article', article_path(@article), method: :delete,
                        class: "btn btn-danger btn-xs", data: {confirm: "Are you sure"}%>
          <% end %>
          <%= link_to 'article list', articles_path, class: "btn btn-success btn-xs" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% unless flash.empty? %>
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-3">
      <% flash.each do |name, msg| %>
         <div class='alert alert-<%="#{name}" %>'>
         <a href="#" class="close" data-dismiss="alert">Ã—</a>
         <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
       </div>
     <% end %>
    </div>
  </div>
<% end %>

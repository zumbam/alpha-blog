<h1 class="center mb-3"> Log in </h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class='form-group row'>

    <div class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">

    <div class="col-sm-2 col-form-label">
      <%= f.label :password %>
    </div>

    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: false %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-4 offset-sm-2">
      <%= f.submit "Log in", class: 'btn btn-dark-red-bordered' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-4 offset-sm-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>

  <% end %>
